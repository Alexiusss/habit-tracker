<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="create-user_role-table" author="boyarinov-alexey">
        <createTable schemaName="entity" tableName="user_role">
            <column name="user_id" type="INT">
                <constraints nullable="false"
                             referencedTableSchemaName="entity"
                             foreignKeyName="user_id"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="user_id, role"
                             schemaName="entity"
                             tableName="user_role"
                             constraintName="user_roles_idx"/>
    </changeSet>
</databaseChangeLog>