<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="create-user-table" author="boyarinov-alexey">
        <createTable schemaName="entity" tableName="users">
            <column name="id" type="INT" defaultValue="nextval('entity.global_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValue="now()"/>
            <column name="modified_at" type="TIMESTAMP"/>
            <column name="version" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"
                             uniqueConstraintName="users_unique_email_idx"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOL" defaultValue="TRUE"/>
        </createTable>
    </changeSet>
</databaseChangeLog>