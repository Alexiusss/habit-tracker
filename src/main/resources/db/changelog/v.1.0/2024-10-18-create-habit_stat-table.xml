<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="create-habit_stat-table" author="boyarinov-alexey">
        <createTable schemaName="entity" tableName="habit_stat">
            <column name="id" type="INT" defaultValue="nextval('entity.global_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValue="now()"/>
            <column name="modified_at" type="TIMESTAMP"/>
            <column name="version" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false"
                             referencedTableSchemaName="entity"
                             foreignKeyName="user_id"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="habit_id" type="INT">
                <constraints nullable="false"
                             referencedTableSchemaName="entity"
                             foreignKeyName="habit_id"
                             referencedTableName="habit"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-habit_stat_unique_date_idx" author="boyarinov-alexey">
        <sql>
            CREATE UNIQUE INDEX habit_stat_unique_date_idx ON entity.habit_stat (habit_id, DATE(created_at))
        </sql>
    </changeSet>
</databaseChangeLog>