<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog.xml">

    <changeSet id="add-frequency-column-to-habit-table" author="boyarinov-alexey">
        <addColumn schemaName="entity" tableName="habit">
            <column name="frequency" type="INTERVAL" defaultValue="1 day">
            </column>
        </addColumn>

    </changeSet>

    <changeSet id="add-frequency-values-to table" author="boyarinov-alexey">
        <update schemaName="entity" tableName="habit">
            <column name="frequency" value="1 day"/>
        </update>
    </changeSet>
</databaseChangeLog>